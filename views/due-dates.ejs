<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>New Due Date</title>
  </head>
  <body>
    <!-- start here -->
    <%- include('navbar.ejs') %>
    <!-- end here -->
    <div class="container mt-4">
      <h2>Create New Due Date</h2>
      <form>
        <div class="mb-3">
          <label for="dueDate" class="form-label">Due Date</label>
          <input type="date" class="form-control" id="dueDate" required />
        </div>
        <div class="mb-3">
          <label for="dueTime" class="form-label">Due Time</label>
          <input type="time" class="form-control" id="dueTime" required />
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            maxlength="15"
            class="form-control"
            id="title"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="description"
            rows="3"
            required
            maxlength="15"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>

    <script>
      function createDueDate(event) {
        event.preventDefault();
        const dueDate = document.getElementById("dueDate").value;
        const dueTime = document.getElementById("dueTime").value;
        const title = document.getElementById("title").value;
        const description = document.getElementById("description").value;

        console.log("Due Date:", dueDate);
        console.log("Due Time:", dueTime);
        console.log("Title:", title);
        console.log("Description:", description);
        fetch("/create-due-date", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ dueDate, dueTime, title, description }),
        });
        // Here you can add your logic to handle the form data, e.g., sending it to your server
      }

      document.querySelector("form").addEventListener("submit", createDueDate);
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
